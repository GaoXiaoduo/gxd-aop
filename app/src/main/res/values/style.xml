<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ShopkeeperTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">#F09A19</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabBackground">@color/purple_200</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabSelectedTextColor">#F09A19</item>
        <item name="tabTextAppearance">@style/ShopkeeperTabTextAppearance</item>
    </style>

    <style name="ShopkeeperTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

</resources>